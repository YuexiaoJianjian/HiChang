<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
  
     <item android:id="@android:id/background">  
         <shape>  
             <corners android:radius="10px" />  
             <gradient  
                     android:startColor="#858992"  
                     android:centerColor="#858992"  
                     android:centerY="0.75"  
                     android:endColor="#858992"  
                     android:angle="270"  
             />  
         </shape>  
     </item>  
     <item android:id="@android:id/progress">  
         <clip>  
             <shape>  
                 <corners android:radius="10px" />  
                 <gradient  
                         android:startColor="#8f5778"  
                         android:centerColor="#8f5778"  
                         android:centerY="0.75"  
                         android:endColor="#8f5778"  
                         android:angle="270"  
                 />  
             </shape>  
         </clip>  
     </item>  
  
 </layer-list> 